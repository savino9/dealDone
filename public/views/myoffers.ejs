<html>

<head>
  <%- include partials/head.ejs %>
</head><!-- /head -->

<body>

  <header>
    <%- include partials/header.ejs %>
  </header><!-- /header -->

  <div class="bgdrinks">

    <div class="texttitle">
      <strong>All your offers </strong>
    </div>

    <table class="table table-dark">
      <thead>
        <tr>
          <!-- <th>#</th> -->
          <th scope="col">Business Name</th>
          <th scope="col">Business Address</th>
          <th scope="col">Offer</th>
          <th scope="col">Time</th>
          <th scope="col">Day</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <% for(let i= 0; i< offers.length; i++) { %>
          <!-- <td>1</td> -->
          <td>
            <%= offers[i].business.name %>
          </td>
          <td>
            <%= offers[i].business.address %>
          </td>
          <td>
            <%= offers[i].body %>
          </td>
          <td>
            <%= offers[i].time.time %>
          </td>
          <td>
            <%= offers[i].time.day %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <br>
    <br>

</div>

    <footer>
      <%- include partials/footer.ejs %>
    </footer>
</body>

</html>
