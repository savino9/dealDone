<html>

<head>
  <%- include partials/head.ejs %>
</head><!-- /head -->

<body>

  <header>
    <% if (business !== undefined) { %>
      <%- include partials/profile-header.ejs %>
    <% } else { %>
      <%- include partials/header.ejs %>
    <% } %>
  </header>

  <div class="texttitle">
    <strong>All offers</strong>
  </div>

  <table class="table table-dark">
    <thead>
      <tr>
        <!-- <th>#</th> -->
        <th>Business Name</th>
        <th>Business Address</th>
        <th>Offer</th>
        <th>Time</th>
        <th>Day</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% for(let i= 0; i< offers.length; i++) { %>
        <!-- <td>1</td> -->
        <td>
          <%= offers[i].business.name %>
        </td>
        <td>
          <%= offers[i].business.address %>
        </td>
        <td>
          <%= offers[i].body %>
        </td>
        <td>
          <%= offers[i].time.time %>
        </td>
        <td>
          <%= offers[i].time.day %>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <br>
  <br>

</div>

  <footer>
    <%- include partials/footer.ejs %>
  </footer>
</body>

</html>
